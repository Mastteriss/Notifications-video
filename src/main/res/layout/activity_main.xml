<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/simpleNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bigTextStyleNotification"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/bigTextStyleNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BigTextStyle Notificatio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bigPicturesStyleNotification"
        app:layout_constraintTop_toBottomOf="@+id/simpleNotification"/>

    <Button
        android:id="@+id/bigPicturesStyleNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BigPicturesStylen Notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/inboxStyleNotification"
        app:layout_constraintTop_toBottomOf="@+id/bigTextStyleNotification"/>

    <Button
        android:id="@+id/inboxStyleNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InboxStyle Notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/actionNotification"
        app:layout_constraintTop_toBottomOf="@+id/bigPicturesStyleNotification"/>

    <Button
        android:id="@+id/actionNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action Notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inboxStyleNotification"/>

</LinearLayout>